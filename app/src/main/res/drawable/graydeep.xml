<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#494c4e" />
            <stroke
                android:width="1dp"
                android:color="#494c4e" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#494c4e"
                android:endColor="#494c4e"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#494c4e" />


        </shape>
    </item>
</selector>